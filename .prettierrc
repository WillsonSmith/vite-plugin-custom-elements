{
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "singleQuote": true,
  "arrowParens": "always",
  "trailingComma": "all",
  "semi": true,
  "importOrder": [
    "^vite/(.*)$",
    "^lit(.*)$",
    "^lit/(.*)$",
    "^@lit(.*)$",
    "<THIRD_PARTY_MODULES>",
    "@/styles(.*)$",
    "^@/components(.*)$",
    "^./(.*)$",
    "^@/(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "jsx", "decorators"],
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}