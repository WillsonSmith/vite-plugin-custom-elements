{
  "name": "plugin-custom-elements",
  "author": "Willson Smith (me@willsonsmith.com)",
  "version": "0.1.2",
  "description": "A Vite plugin for building websites with HTML",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "vite build --emptyOutDir",
    "build-plugin": "tsc --project tsconfig.plugin.json",
    "test": "vitest",
    "manifest": "cem analyze",
    "prepare": "npm run build-plugin"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/scoped-elements": "^3.0.5",
    "@open-wc/testing": "^4.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/test-runner": "^0.18.2",
    "esbuild": "^0.21.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-lit": "^1.13.0",
    "eslint-plugin-lit-a11y": "^4.1.2",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-wc": "^2.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "parse5": "^7.1.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vite-raw-plugin": "^1.0.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.2",
    "@open-wc/dedupe-mixin": "^1.4.0",
    "@web/parse5-utils": "^2.1.0",
    "@webcomponents/scoped-custom-element-registry": "^0.0.9",
    "custom-elements-manifest": "^2.1.0",
    "glob": "^10.4.1",
    "postcss": "^8.4.38",
    "postcss-prefix-selector": "^1.16.1",
    "vite": "^5.2.11"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,css,md}": "prettier --write"
  }
}
