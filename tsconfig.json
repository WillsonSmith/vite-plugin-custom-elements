{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "target": "ES2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["bun-types", "mocha"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
